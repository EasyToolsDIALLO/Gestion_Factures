<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/orange_clair"
            android:gravity="center"
            android:text="COMPTE"
            android:textSize="@dimen/big_title" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="726dp"
        android:layout_marginTop="55dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtlogincreate"
            android:layout_width="346dp"
            android:layout_height="125dp"
            android:layout_marginStart="@dimen/left"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/right"
            android:layout_marginBottom="@dimen/bottom"
            android:layout_weight="1"
            android:background="@drawable/contour_edit"
            android:drawableStart="@drawable/ic_login"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Nouveau Identifiant"
            android:inputType="text"
            android:padding="15dp"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="723dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtnewpassword"
            android:layout_width="346dp"
            android:layout_height="125dp"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="12dp"
            android:background="@drawable/contour_edit"
            android:layout_marginBottom="@dimen/bottom"
            android:layout_marginStart="@dimen/left"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/right"
            android:padding="15dp"
            android:hint="Nouveau mot de passe"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="723dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtconfirmpassword"
            android:layout_width="346dp"
            android:layout_height="125dp"
            android:layout_marginStart="@dimen/left"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/right"
            android:layout_marginBottom="@dimen/bottom"
            android:layout_weight="1"
            android:background="@drawable/contour_edit"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:padding="15dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="853dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/creercompte"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginStart="@dimen/left"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/right"
            android:background="@drawable/contour_edit"
            android:text="@string/create"
            android:textColor="#263238" />

        <Button
            android:id="@+id/annulercreercompte"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginStart="@dimen/left"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/right"
            android:background="@drawable/contour_edit"
            android:text="@string/cancel" />
    </LinearLayout>
</LinearLayout>












